/* RESET B√ÅSICO */
* {
    margin: 0;
    /* RESET B√ÅSICO */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, sans-serif;
    }

    /* VARIABLES */
    :root {
        --color-principal: #2563eb;
        --color-morado: #6d28d9;
        --color-morado-2: #7c3aed;
        --color-secundario: #0f172a;
        --color-fondo: #f1f5f9;
        --color-blanco: #ffffff;
        --color-gris: #64748b;
    }

    /* BODY */
    body {
        background-color: var(--color-fondo);
        color: var(--color-secundario);
        line-height: 1.6;
    }

    /* HEADER */
    header {
        background: linear-gradient(90deg,var(--color-morado) 0%, var(--color-morado-2) 100%); /* morado */
        color: var(--color-blanco);
        padding: 22px 40px; /* reducido para evitar espacio en blanco arriba */
        box-shadow: 0 6px 20px rgba(109,40,217,0.10);
    }
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    header h1 {
        font-size: 1.5rem;
        margin-bottom: 6px;
    }

    .tagline {
        font-size: 0.95rem;
        color: rgba(255,255,255,0.95);
        margin: 0 0 8px 0;
        font-weight: 400;
    }

    /* Brand container: agrupa h1 + tagline para mantener nav alineado */
    .brand {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    @media (max-width: 768px) {
        .brand { align-items: center; }
    }

    /* NAV */
    .menu-contenido {
        display: flex;
        gap: 20px;
    }

    .menu-contenido a {
        color: var(--color-blanco);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s;
    }

    .menu-contenido a:hover {
        color: rgba(255,255,255,0.95);
        background: rgba(255,255,255,0.04);
    }

    .menu-contenido a {
        padding: 6px 8px;
        border-radius: 6px;
    }

    /* Enfoque accesible (keyboard) */
    .menu-contenido a:focus,
    .menu-contenido a:focus-visible,
    button:focus,
    button:focus-visible {
        outline: 3px solid rgba(37, 99, 235, 0.4);
        outline-offset: 2px;
        box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.08);
    }

    /* MAIN */
    main {
        max-width: 1000px;
        margin: 40px auto;
        padding: 0 20px;
    }

    /* DESCRIPCI√ìN */
    .descripcion {
        text-align: center;
        margin-bottom: 50px;
    }

    .descripcion h2 {
        font-size: 1.8rem;
        margin-bottom: 15px;
    }

    .descripcion p {
        color: var(--color-gris);
    }

    /* TECNOLOG√çAS */
    .contenedor-tecnologias {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-bottom: 60px;
    }

    .caja {
        background-color: var(--color-blanco);
        padding: 30px;
        text-align: center;
        font-weight: bold;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .caja:hover {
        transform: translateY(-6px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    /* Colores por tecnolog√≠a (mejoran la apariencia) */
    .caja.angular { background: linear-gradient(135deg,#dd0031,#c3002f); color: #fff; }
    .caja.sql { background: linear-gradient(135deg,#0175c2,#035a9c); color: #fff; }
    .caja.java { background: linear-gradient(135deg,#b07219,#a64f08); color: #fff; }
    .caja.linux { background: linear-gradient(135deg,#000000,#111827); color: #fff; }
    .caja.python { background: linear-gradient(135deg,#306998,#ffd43b); color: #0b1220; }
    .caja.hacking { background: linear-gradient(135deg,#059669,#10b981); color: #fff; }

    /* FORMULARIO */
    form {
        background-color: var(--color-blanco);
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    }

    form h2 {
        margin-bottom: 20px;
        text-align: center;
    }

    label {
        display: block;
        margin-top: 15px;
        font-weight: 500;
    }

    input,
    textarea {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border-radius: 6px;
        border: 1px solid #cbd5e1;
        font-size: 0.95rem;
    }

    textarea {
        resize: vertical;
        min-height: 120px;
    }

    button {
        margin-top: 20px;
        width: 100%;
        padding: 12px;
        background-color: var(--color-principal);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    button:hover {
        background-color: #1d4ed8;
    }

    /* FOOTER */
    footer {
        background: linear-gradient(90deg,#071027 0%, #061122 100%);
        color: var(--color-blanco);
        text-align: center;
        padding: 24px 20px;
        margin-top: 80px;
        border-top: 1px solid rgba(255,255,255,0.03);
    }

    .footer-content {
        max-width: 1000px;
        margin: 0 auto;
    }

    .footer-title {
        font-weight: 600;
        margin-bottom: 6px;
    }

    .footer-meta {
        color: var(--color-gris);
        font-size: 0.95rem;
    }

    .footer-meta a { color: var(--color-principal); text-decoration: none; }

    .footer-simple { margin-top: 6px; color: rgba(255,255,255,0.9); font-size: 0.95rem; }

    /* MEDIA QUERY (orden: min-width ascendente 1024 ‚Üí 1280 ‚Üí 2560) */

    @media (min-width: 1024px) {

        main {
            max-width: 1100px;
        }

        .descripcion h2 {
            font-size: 2.1rem;
        }

        .descripcion p {
            font-size: 1.05rem;
            max-width: 800px;
            margin: 0 auto;
        }

        .contenedor-tecnologias {
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
        }

        form {
            max-width: 700px;
            margin: 0 auto;
        }
    }


    @media (min-width: 1280px) {

        main {
            max-width: 1300px;
        }

        header {
            padding: 30px 80px;
        }

        header h1 {
            font-size: 1.8rem;
        }

        .menu-contenido a {
            font-size: 1.05rem;
        }

        .descripcion h2 {
            font-size: 2.4rem;
        }

        .descripcion p {
            font-size: 1.1rem;
        }

        .contenedor-tecnologias {
            grid-template-columns: repeat(4, 1fr);
            gap: 35px;
        }

        form {
            padding: 40px;
        }

        button {
            font-size: 1.1rem;
        }
    }


    @media (min-width: 2560px) {

        body {
            font-size: 18px;
        }

        header {
            padding: 40px 140px;
        }

        header h1 {
            font-size: 2.2rem;
        }

        .menu-contenido a {
            font-size: 1.2rem;
        }

        main {
            max-width: 1600px;
            /* üëà clave: no usar 100% */
            margin: 60px auto;
        }

        .descripcion h2 {
            font-size: 3rem;
            max-width: 1200px;
            margin: 0 auto 20px;
        }

        .descripcion p {
            font-size: 1.25rem;
            max-width: 1000px;
            margin: 0 auto;
        }

        .contenedor-tecnologias {
            grid-template-columns: repeat(6, 1fr);
            gap: 40px;
        }

        .caja {
            padding: 45px;
            font-size: 1.3rem;
        }

        form {
            max-width: 900px;
            padding: 50px;
        }

        button {
            padding: 16px;
            font-size: 1.2rem;
        }

        footer {
            font-size: 1.1rem;
            padding: 25px;
        }
    }


    @media (max-width: 768px) {

        header {
            flex-direction: column;
            gap: 15px;
            text-align: center;
        }

        .menu-contenido {
            flex-direction: column;
            gap: 10px;
        }

        .contenedor-tecnologias {
            grid-template-columns: repeat(2, 1fr);
        }

        .descripcion h2 {
            font-size: 1.5rem;
        }
    }

    @media (max-width: 480px) {

        .contenedor-tecnologias {
            grid-template-columns: 1fr;
        }
    }